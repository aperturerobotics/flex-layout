{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@aptre/flex-layout": ["../src/index.ts"],
      "@aptre/flex-layout/*": ["../*"]
    }
  },
  "include": ["src"]
}
